<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0sp"
    tools:context=".MainActivity">



    <TextureView
        android:id="@+id/textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/getpicture"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25sp"
        android:background="@drawable/shutter_button_background"
        android:elevation="5dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="5sp">

        <ImageButton
            android:id="@+id/flash"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@null"
            android:elevation="5dp"
            android:src="@drawable/ic_flash_on_white_24dp" />

        <ImageButton
            android:id="@+id/front_back"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_toRightOf="@id/flash"
            android:background="@null"
            android:elevation="5dp"
            android:src="@drawable/ic_camera_front_white_24dp" />

        <ImageButton
            android:id="@+id/modes"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:elevation="5dp"
            android:src="@drawable/ic_menu_white_24dp" />


    </RelativeLayout>


</RelativeLayout>